/* @import 'assets/css/iconfont.wxss'; */
page {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}

view {
  box-sizing: border-box;
}

text {
  box-sizing: border-box;
}

image {
  box-sizing: border-box;
}

cover-view {
  pointer-events: none;
}

cover-image {
  pointer-events: none;
}

/* 箭头 */

.arrow::after {
  display: block;
  transform: rotate(45deg);
  border: 0.5vw solid #c7c7cc;
  opacity: 0.8;
  border-bottom-width: 0;
  border-left-width: 0;
  content: '';
  width: 15rpx;
  height: 15rpx;
}

/*
   一行文本溢出显示……
*/

.ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 
flex居中
 */

.flexCenter {
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 
absolute居中
 */

.absoluteCenter {
  position: absolute;
  margin: auto;
  top: 0;
  left: 0;
  right: 0;
  border: 0;
}

/* 重置微信自带样式 */

.navigator-hover, .button-hover {
  background: transparent;
  opacity: 1;
}

button::after {
  border: none;
}
